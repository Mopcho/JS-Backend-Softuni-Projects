        <main>
            <h1>{{cube.name}}</h1>
            <img class="cube" src="{{cube.imgPath}}">
            <div class="details">
                <p><span>Description:</span>{{cube.description}}</p>
                <p><span>Difficulty level:</span> {{cube.difficultyLevel}}</p>
                <a class="btn" href="/">Back</a>
                {{#if isOwner}}
                <a class="btn" href="/cube/edit/{{cube._id}}">Edit Cube</a>
                <a class="btn" href="/cube/delete/{{cube._id}}">Delete Cube</a>
                {{/if}}
            </div>
            {{#if cube.accessories}}
            <h2>Accessories</h2>
            <div class="accessories">
                {{#each cube.accessories}}
                    {{> accessory}}
                {{/each}}
                {{else}}
                <h3 class="italic">This cube has no accessories yet...</h3>
                {{/if}}
                
            </div>
        </main>