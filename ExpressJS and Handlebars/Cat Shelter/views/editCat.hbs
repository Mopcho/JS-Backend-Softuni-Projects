<main>
    <form action="#" method="post" class="cat-form" enctype="multipart/form-data">
        <h2>Edit Cat</h2>
        <label for="name">name</label>
        <input type="text" id="name" name="name" value="{{cat.name}}">
        <label for="description">Description</label>
        <textarea id="description" name="description">{{cat.description}}</textarea>
        <label for="image">Image</label>
        <input type="file" id="image" name="upload">
        <label for="group">Breed</label>
        <select id="group">
            {{#each breeds}}
                    {{#when ../cat.breed 'eq' this}}
                    <option name="breed" value="{{this}}" selected>{{this}}</option>]
                    {{/when}}
                    {{#when ../cat.breed 'noteq' this}}
                    <option name="breed" value="{{this}}">{{this}}</option>]
                    {{/when}}
            {{/each}}
        </select>
        <button>Edit Cat</button>
    </form>
    </main>
</body>

</html>